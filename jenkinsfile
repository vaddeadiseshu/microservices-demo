pipeline{
    agent any 
    triggers {
        cron('*/30 * * * *')
    }
    stages{
        stage("code downloding"){
            steps{
                echo "code is getting downloaded"
                git 'https://github.com/vaddeadiseshu/microservices-demo.git'
            }
            post{
                always{
                    echo "========always========"
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}