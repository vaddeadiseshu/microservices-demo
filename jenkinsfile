pipeline{
    agent any 

    triggers {
        cron('*/1 * * * *')
    }

    stages{
        stage("code downloding")
        {
            step
            {
               
               sh label: '', script: 'git clone https://github.com/vaddeadiseshu/microservices-demo.git'
           }     
        }
        stage("building code")
        {
            step
            {
                sh label: '', script: 'maven clean package'
            }
                
        }
    }
    
}